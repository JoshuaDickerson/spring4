<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.springapp4.mvc.User" table="user">
        <id column="id" name="id" type="java.lang.Long">
            <generator class="org.hibernate.id.TableHiLoGenerator">
                <param name="table">idgen</param>
                <param name="column">NEXT</param>
            </generator>
        </id>
        <property column="password" name="password" type="java.lang.String"/>
        <property column="username" name="username" type="java.lang.String"/>
        <property column="email" name="email" type="java.lang.String"/>
        <property column="last_login" length="4" name="lastLogin" type="java.sql.Date"/>
        <set name="person" lazy="true" inverse="true" cascade="all-delete-orphan">
            <key column="id" />
            <one-to-many class="com.springapp4.mvc.Person" />
        </set>
    </class>
</hibernate-mapping>